<!DOCTYPE html>
<html>
  <head>
    <title>ToDo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= favicon_link_tag asset_path('check.ico'), :rel => 'icon', :type =>  'image/x-icon' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= content_tag(:div, '', class: 'header', style: 'float: left') do %>
      <%= link_to root_path do %>
        <%= image_tag('check.png', size: '47', class: 'icon', alt: 'ToDo') %>
        <%= content_tag(:span, '', class: 'login') do %>
          <%= content_tag(:span, "Devin's ToDos", class: 'title') %>
        <% end %>
      <% end %>
    <% end %>

    <%= content_tag(:div, '', style: 'clear: both') %>

    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>

    <%= yield %>

  </body>
</html>
