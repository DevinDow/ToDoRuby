<% @lists.each do |list| %>
  <h2><%= link_to list.name, list_path(list) %></h2>

  <table>
    <% list.tasks.each do |task| %>
      <tr>
        <%= render 'layouts/task', task: task %>
      </tr>
    <% end %>
    <tr><td colspan=4><%= link_to 'New Task', new_list_task_path(list) %></td></tr>
  </table>

  <hr/>
<% end %>

<%= link_to 'New List', new_list_path %>
